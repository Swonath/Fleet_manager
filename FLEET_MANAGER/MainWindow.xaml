<Window x:Class="FLEET_MANAGER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FLEET_MANAGER"
        mc:Ignorable="d"
        Title="Fleet Manager - Gestion de Parc Automobile"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}}"
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#2C3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo et titre -->
                <StackPanel Grid.Row="0" Margin="24,28,24,32">
                    <Border Width="48" Height="48"
                            CornerRadius="12"
                            Background="{StaticResource PrimaryBrush}"
                            Margin="0,0,0,16">
                        <TextBlock Text="ðŸš—"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Fleet Manager"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="Gestion de Parc Automobile"
                               FontSize="12"
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Menu de navigation -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="MENU PRINCIPAL"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#64748B"
                               Margin="24,0,24,12"/>

                    <Button Content="ðŸ“Š Tableau de bord"
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnDashboard_Click"/>

                    <Button x:Name="BtnVehiculesNav"
                            Content="ðŸš— VÃ©hicules"
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnVehicules_Click"/>

                    <Button Content="â›½ Carburant &amp; Trajets"
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnCarburantTrajet_Click"/>

                    <Separator Background="#475569"
                               Height="1"
                               Margin="24,20,24,20"
                               Opacity="0.3"/>

                    <TextBlock Text="ADMINISTRATION"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#64748B"
                               Margin="24,0,24,12"/>

                    <Button x:Name="BtnUtilisateurs"
                            Content="ðŸ‘¥ Utilisateurs"
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnUtilisateurs_Click"/>
                </StackPanel>

                <!-- User profile et dÃ©connexion -->
                <StackPanel Grid.Row="2" Margin="16,0,16,24">
                    <Separator Background="#475569"
                               Height="1"
                               Margin="8,0,8,16"
                               Opacity="0.3"/>

                    <!-- User info -->
                    <Border Background="#1E293B"
                            CornerRadius="12"
                            Padding="12"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Width="40" Height="40"
                                    CornerRadius="10"
                                    Background="#3B82F6">
                                <TextBlock Text="{Binding UtilisateurConnecte.NomUtilisateur, StringFormat={}{0:C2}}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding UtilisateurConnecte.NomComplet}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding UtilisateurConnecte.Role}"
                                           FontSize="11"
                                           Foreground="#94A3B8"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Button Content="DÃ©connexion"
                            Style="{StaticResource SidebarButtonStyle}"
                            Click="BtnDeconnexion_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" x:Name="ContentArea" Content=""/>
    </Grid>
</Window>
